{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es6", "dom"],
		"types": ["reflect-metadata", "node"],
		"module": "commonjs",
		"moduleResolution": "node",

		"strict": true,
		"isolatedModules": true,
		
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules"]
}
